<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:text="Detalle Inspeccion Tecnica Vehicular"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Control de freno de mano"/>
                <Spinner
                    android:id="@+id/spifrenomano"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Control de fugas, cilindro auxiliar maestro y caÃ±eria"/>
                <Spinner
                    android:id="@+id/spicilindro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Control de luces delanteras y traseras"/>
                <Spinner
                    android:id="@+id/spiluces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Control de luces de stop(freno)"/>
                <Spinner
                    android:id="@+id/spilucesstop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Control de luces de retro"/>
                <Spinner
                    android:id="@+id/spilucesretro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Control de luces guineadores (parqueo)"/>
                <Spinner
                    android:id="@+id/spilucesparqueo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Control de limpia parabrisas"/>
                <Spinner
                    android:id="@+id/spiparabrisas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Juego en el volante"/>
                <Spinner
                    android:id="@+id/spivolante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Control de munones de suspension"/>
                <Spinner
                    android:id="@+id/spisuspension"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Control de munones de direccion"/>
                <Spinner
                    android:id="@+id/spidireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Profundidad de neumaticos (minima 2mm)"/>
                <Spinner
                    android:id="@+id/spineumaticos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Control de humo de escape"/>
                <Spinner
                    android:id="@+id/spihumo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Espejos retrovisores interiores y exteriores"/>
                <Spinner
                    android:id="@+id/spiretrovisor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Cinturon de seguridad"/>
                <Spinner
                    android:id="@+id/spicinturon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Vidrios polarizados"/>
                <Spinner
                    android:id="@+id/spividrios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Gata, llave cruz"/>
                <Spinner
                    android:id="@+id/spigata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Rueda de auxilio"/>
                <Spinner
                    android:id="@+id/spiruedaaux"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Botiquin de primeros auxilios"/>
                <Spinner
                    android:id="@+id/spibotiquin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:text="Extintor y triangulo de seguridad"/>
                <Spinner
                    android:id="@+id/spiextintor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:spinnerMode="dialog"
                    />
                <Button
                    android:id="@+id/btnRegistroDetalleITV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="18dp"
                    android:layout_weight="1"
                    android:textColor="@color/primary_light"
                    android:background="@drawable/btn_redondo"
                    android:padding="15dp"
                    android:text="Continuar" />


            </LinearLayout>






        </LinearLayout>
    </ScrollView>
</LinearLayout>