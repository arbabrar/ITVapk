<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Data.Views.Activity.FotografiaPersonaActivity">
    <LinearLayout
        android:id="@+id/main_layout_persona"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:text="@string/fotografia_persona"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />
        I

        <ImageView
            android:id="@+id/ivFotoPersona"
            android:layout_width="390dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:contentDescription="@string/fotografia_persona"
            android:src="@drawable/image_not_found"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageButton
            android:id="@+id/iBFotoPersona"
            android:layout_width="227dp"
            android:layout_height="80dp"
            android:layout_marginTop="44dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/common_google_signin_btn_text_light"
            app:srcCompat="@drawable/ic_menu_camera" />

        <Button
            android:id="@+id/btnenviarfotoPersona"
            android:layout_width="308dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_redondo"
            android:padding="15dp"
            android:text="@string/continuar"
            android:textColor="@color/primary_light"
            android:layout_marginTop="60dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>