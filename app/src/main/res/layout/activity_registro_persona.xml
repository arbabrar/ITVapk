<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:orientation="vertical"
    tools:context=".Data.Views.Activity.RegistroPersona">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:text="Datos Personales del propietario o encargado"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etnombre"
                        android:inputType="textCapCharacters"
                        android:layout_width="match_parent"
                        android:maxLength="15"
                        android:textSize="15dp"
                        android:padding="15dp"
                        android:layout_height="wrap_content"
                        android:hint="Nombre"/>

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:inputType="textCapCharacters"
                        android:id="@+id/etapellidopaterno"
                        android:layout_width="match_parent"
                        android:maxLength="15"
                        android:padding="15dp"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:hint="Apellido Paterno"/>

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etapellidomaterno"
                        android:layout_width="match_parent"
                        android:maxLength="15"
                        android:layout_height="wrap_content"
                        android:hint="Apellido Materno"
                        android:inputType="textCapCharacters"
                        android:padding="15dp"
                        android:textSize="15dp" />

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:text="Sexo"/>
                <Spinner
                    android:id="@+id/spisexo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"
                    android:background="@color/primary_light"
                    android:entries="@array/sexo"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etocupacion"
                        android:inputType="textCapCharacters"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:layout_height="wrap_content"
                        android:hint="Ocupacion"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:text="Pais"/>
                <Spinner
                    android:id="@+id/spipais"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"
                    android:background="@color/primary_light"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:text="Departamento"/>
                <Spinner
                    android:id="@+id/spidepartamento"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"
                    android:background="@color/primary_light"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:text="Provincia"/>
                <Spinner
                    android:id="@+id/spiprovincia"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"
                    android:background="@color/primary_light"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:text="Municipio"/>
                <Spinner
                    android:id="@+id/spimunicipio"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"
                    android:background="@color/primary_light"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etlocalidad"
                        android:inputType="textCapCharacters"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:layout_height="wrap_content"
                        android:hint="Localidad"
                        />


                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:text="Tipo Documento"/>
                <Spinner
                    android:id="@+id/spitipodocumento"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"
                    android:background="@color/primary_light"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etnrodocumento"
                            android:inputType="textCapCharacters"
                            android:textSize="15dp"
                            android:maxLength="20"
                            android:layout_width="match_parent"
                            android:padding="15dp"
                            android:layout_height="wrap_content"
                            android:hint="NroDocumento"
                            />


                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etcomplemento"
                            android:inputType="textCapCharacters"
                            android:maxLength="2"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:padding="15dp"
                            android:layout_height="wrap_content"
                            android:hint="Complemento"
                            />


                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:text="Expedido"/>
                <Spinner
                    android:id="@+id/spiexpedido"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"
                    android:background="@color/primary_light"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:text="Licencia"/>
                <Spinner
                    android:id="@+id/spilicencia"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"
                    android:background="@color/primary_light"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etdomicilio"
                        android:inputType="textCapCharacters"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:layout_height="wrap_content"
                        android:hint="Domicilio"
                        />


                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etfechanacimiento"
                        android:inputType="date"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:clickable="true"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:layout_height="wrap_content"
                        android:hint="Fecha de nacimiento"
                        />


                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:text="Estado Civil"/>
                <Spinner
                    android:id="@+id/spiestadocivil"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"
                    android:background="@color/primary_light"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etcelular"
                        android:inputType="number"
                        android:maxLength="8"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:layout_height="wrap_content"
                        android:hint="Nro Celular"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etemail"
                        android:inputType="textEmailAddress"
                        android:textSize="15dp"
                        android:maxLength="80"
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:layout_height="wrap_content"
                        android:hint="Correo Electronico"
                        />


                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnRegistroPer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:layout_weight="1"
                    android:textColor="@color/primary_light"
                    android:background="@drawable/btn_redondo"
                    android:padding="15dp"
                    android:text="Continuar" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>